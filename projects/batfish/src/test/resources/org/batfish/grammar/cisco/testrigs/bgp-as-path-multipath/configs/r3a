! This node receives 1.0.0.0/32 from r1 and forwards it to r6a
hostname r3a
!
interface Loopback0
 ip address 3.0.0.1/32
!
interface Ethernet1
 ip address 10.13.1.3/24
 no shutdown
!
interface Ethernet6/1
 ip address 10.36.11.3/24
 no shutdown
!
route-map deny-all deny 100
!
router bgp 3
 router-id 3.0.0.1
 !
 neighbor 10.13.1.1 remote-as 1
 neighbor 10.13.1.1 route-map deny-all out
 neighbor 10.13.1.1 activate
 !
 neighbor 10.36.11.6 remote-as 6
 neighbor 10.36.11.6 route-map deny-all in
 neighbor 10.36.11.6 activate
!
!
