! This node receives 1.0.0.0/32 from r1 and forwards it to r6b
hostname r3b
!
interface Loopback0
 ip address 3.0.0.2/32
!
interface Ethernet1
 ip address 10.13.2.3/24
 no shutdown
!
interface Ethernet6/2
 ip address 10.36.22.3/24
 no shutdown
!
route-map deny-all deny 100
!
router bgp 3
 router-id 3.0.0.2
 !
 neighbor 10.13.2.1 remote-as 1
 neighbor 10.13.2.1 route-map deny-all out
 neighbor 10.13.2.1 activate
 !
 neighbor 10.36.22.6 remote-as 6
 neighbor 10.36.22.6 route-map deny-all in
 neighbor 10.36.22.6 activate
!
!
