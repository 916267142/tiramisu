! This node originates 1.0.0.0/32 to r2, r3a, r3b, r4
hostname r1
!
interface Loopback0
 ip address 1.0.0.0/32
!
interface Ethernet2
 ip address 10.12.0.1/24
 no shutdown
!
interface Ethernet3/1
 ip address 10.13.1.1/24
 no shutdown
!
interface Ethernet3/2
 ip address 10.13.2.1/24
 no shutdown
!
interface Ethernet4
 ip address 10.14.0.1/24
 no shutdown
!
route-map deny-all deny 100
!
router bgp 1
 router-id 1.0.0.0
 !
 neighbor 10.12.0.2 remote-as 2
 neighbor 10.12.0.2 activate
 neighbor 10.12.0.2 route-map deny-all in
 !
 neighbor 10.13.1.3 remote-as 3
 neighbor 10.13.1.3 activate
 neighbor 10.13.1.3 route-map deny-all in
 !
 neighbor 10.13.2.3 remote-as 3
 neighbor 10.13.2.3 activate
 neighbor 10.13.2.3 route-map deny-all in
 !
 neighbor 10.14.0.4 remote-as 4
 neighbor 10.14.0.4 activate
 neighbor 10.14.0.4 route-map deny-all in
 !
 network 1.0.0.0/32
!
!
